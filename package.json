{
  "name": "llm-companion",
  "description": "A browser extension for LLM interaction with web pages",
  "license": "MIT",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip -b chromium",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@preact/signals": "^2.5.1",
    "lucide-preact": "^0.562.0",
    "preact": "^10.28.2",
    "turndown": "7.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@preact/preset-vite": "^2.10.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/preact": "^3.2.4",
    "@types/chrome": "^0.1.33",
    "@types/jsdom": "^27.0.0",
    "@types/mozilla-readability": "^0.2.1",
    "@types/turndown": "^5.0.6",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17",
    "wxt": "^0.20.13"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild",
      "spawn-sync"
    ],
    "onlyBuiltDependencies": [
      "esbuild",
      "spawn-sync"
    ]
  }
}
